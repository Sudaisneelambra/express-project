            <div class="two">
                <h1>SIGN UP</h1>
                <form action="signup" style="width: 70%; display: flex;flex-direction: column; justify-content: center;" method="post">
                    <label for="">Email : </label>
                    <input type="text" name="email" id="email" placeholder="enter your email" required><br>
                    <label for="">Password</label>
                    <input type="text" name="pass" id="password" placeholder="password" required onblur="validation()">
                    <button type="submit" style="margin-top: 30px; padding:5px;" onclick="submitForm(event)">submit</button>
                </form>
                <p id="passerror" style="color: red;"></p>
                <p id="comment" style="color: red;"></p>
                <p>Already have an account? <a href="/login">login</a></p>
            </div>
          
   </section>


